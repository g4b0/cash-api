{
    "require": {
        "php": "8.3.*",
        "flightphp/core": "^3.18",
        "ext-sqlite3": "*",
        "ext-pdo": "*",
        "ext-json": "*",
        "firebase/php-jwt": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "ext-xml": "*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/routes.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "php8.3 vendor/bin/phpunit",
        "test:coverage": "XDEBUG_MODE=coverage php8.3 vendor/bin/phpunit --coverage-html tests/coverage/html --coverage-clover tests/coverage/clover.xml",
        "test:coverage:text": "XDEBUG_MODE=coverage php8.3 vendor/bin/phpunit --coverage-text"
    }
}
